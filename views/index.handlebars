<h1>Burgers</h1>
<div class = "menu">
  <div class="column">
{{!-- grouping for burgers where devoured = false --}}
<h2>Made to Order!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
	{{!--burger name--}}
	<h2>{{burger_name}}</h2>
	{{!-- button to devour or order another (move to Made to Order) --}}
	<button class="devoured" data-id="{{id}}" data-newdevour="{{devoured}}">
		{{#if devour}}Devoured! Order another!{{else}}Devour your burger!{{/if}}
	</button>
</li>
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="column">
{{!-- grouping for burgers where devoured = true --}}
<h2>Already Eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
	{{!--burger name--}}
	<h2>{{burger_name}}</h2>
	{{!-- button to devour or order another (move to Made to Order) --}}
	<button class="devoured" data-id="{{id}}" data-newdevour="{{devoured}}">
		{{#if devour}}Devoured! Order another!{{else}}Devour your burger!{{/if}}
	</button>
</li>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
{{!-- form to create/add new burger --}}
<h2>Add a Burger</h2>
<form class="form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <div class="form-group">
    <label for="devour">Devour?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Already Eaten!<br>
    <input type="radio" name="sleepy" value="0"> Made to Order!
  </div>

  <button type="submit">Add Burger</button>
</form>